        <security:intercept-url pattern="/" access="permitAll" />
        <security:intercept-url pattern="/home" access="permitAll" />
        <security:intercept-url pattern="/formcapacitacion" access="hasAnyAuthority('ADMIN')" />
        <security:intercept-url pattern="/crearcapacitacion" access="hasAnyAuthority('ADMIN')" />
        <security:intercept-url pattern="/listacapacitaciones" access="hasAnyAuthority('ADMIN')" />
